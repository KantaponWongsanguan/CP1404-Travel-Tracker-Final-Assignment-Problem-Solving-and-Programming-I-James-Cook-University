# Create your Kivy layout in the kv language here
BoxLayout:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        width: 200
        size_hint_x: None
        Label:
            text: "Sort by:"
        Spinner:
            text: str(app.current_place)
            values: app.sort_places
            on_text: app.switch_sort_option(self.text)
        Label:
            text:"Add New Place..."
        Label:
            text:"Name"
        TextInput:
            id: name_input
            text:""
            multiline: False
            write_tab: False
        Label:
            text:"Country"
        TextInput:
            id: country_input
            text:""
            multiline: False
            write_tab: False
        Label:
            text:"Priority"
        TextInput:
            id: priority_input
            text:""
            multiline: False
            write_tab: False
        Button:
            id: add_place_button
            text: "Add Place"
            on_press: app.add_new_place()
        Button:
            id: clear_places_button
            text: "Clear"
            on_press: app.clear_place_inputs()
    BoxLayout:
        orientation: "vertical"
        Label:
            id: top_message
            size_hint_y: None
            height: 45
        BoxLayout:
            orientation: "vertical"
            id: main_places
        Label:
            id: bottom_message
            size_hint_y: None
            height: 45

